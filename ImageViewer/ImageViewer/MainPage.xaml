<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageViewer.MainPage">

    <StackLayout>
        <Frame BackgroundColor="MediumVioletRed" Padding="24" CornerRadius="0">
            <Label Text="Image Viewer" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>
        <Entry x:Name="ImageUrl" Placeholder="Enter image URL"/>
        <Button Text="Show" BackgroundColor="MediumVioletRed" Clicked="UpdateImage"/>
        <Image x:Name="Image" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Aspect="AspectFit"/>
    </StackLayout>

</ContentPage>
